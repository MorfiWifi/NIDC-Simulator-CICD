@page "/SaveConfig_3b"
@using Models.Config
@using Panel16.Shared
@using Models.Config
@using Panel16.Pages.Components
@inject IConfigApi _configApi
@layout SaveConfigLayout
<EditForm Model="@ConfigDetails" OnValidSubmit="SaveAndContinue">

    <div class="container-fluid">
        <h1 class="page-title d-flex justify-content-between align-items-center">
            <span>
                Casing & Liner
            </span>
            <span class="d-inline-flex justify-content-end">
                <MudFab Label="@localizer[LocalizationKeys.SaveAndContinue]" @onclick="SaveAndContinue" DisableElevation="true" />
            </span>
        </h1>
        <div class="row justify-content-around">
            <div class="col-md-5 m-1 border  border-primary">
                <div class="text-center mx-auto d-block">
                    <p class="h5 m-1">Casing</p>
                </div>
                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Last Casing Depth
                    </div>


                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.CasingDepth"
                                         unitCat="@Enums.UnitCategory.Length" units="@ConfigDetails.Units" />

                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Casing Id
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.CasingId"
                                         unitCat="@Enums.UnitCategory.Diameter" units="@ConfigDetails.Units" />
                    </div>
                </div>


                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Casing Od
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.CasingOd"
                                         unitCat="@Enums.UnitCategory.Diameter" units="@ConfigDetails.Units" />
                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Casing Weight
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.CasingWeight"
                                         unitCat="@Enums.UnitCategory.WeightOfUnitLength" units="@ConfigDetails.Units" />
                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Collapse Pressure
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.CasingCollapsePressure"
                                         unitCat="@Enums.UnitCategory.Pressure" units="@ConfigDetails.Units" />
                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Tensile Strength
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.CasingTensileStrength"
                                         unitCat="@Enums.UnitCategory.Weight" units="@ConfigDetails.Units" />
                    </div>
                </div>




            </div>
            <!---->
            <div class="col-md-5 m-1 border  border-primary">
                <div class="text-center mx-auto d-block">
                    <p class="h5 m-1">Liner</p>
                </div>
                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Liner Top Depth
                    </div>


                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerTopDepth"
                                         unitCat="@Enums.UnitCategory.Length" units="@ConfigDetails.Units" />

                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Liner Length
                    </div>


                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerLength"
                                         unitCat="@Enums.UnitCategory.Length" units="@ConfigDetails.Units" />

                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Liner Id
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerId"
                                         unitCat="@Enums.UnitCategory.Diameter" units="@ConfigDetails.Units" />
                    </div>
                </div>


                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Liner Od
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerOd"
                                         unitCat="@Enums.UnitCategory.Diameter" units="@ConfigDetails.Units" />
                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Liner Weight
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerWeight"
                                         unitCat="@Enums.UnitCategory.WeightOfUnitLength" units="@ConfigDetails.Units" />
                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Collapse Pressure
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerCollapsePressure"
                                         unitCat="@Enums.UnitCategory.Pressure" units="@ConfigDetails.Units" />
                    </div>
                </div>

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Tensile Strength
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.LinerTensileStrength"
                                         unitCat="@Enums.UnitCategory.Weight" units="@ConfigDetails.Units" />
                    </div>
                </div>




            </div>
            <!---->
        </div>

        <div class="row  justify-content-around">
            <div class="text-center mx-auto w-100">
                <p class="h5 m-1">Open Hole</p>
            </div>
            <div class="col-md-5 m-1  border  border-primary ">

                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        Length
                    </div>


                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.OpenHoleLength"
                                         unitCat="@Enums.UnitCategory.Length" units="@ConfigDetails.Units" />

                    </div>
                </div>



                <div class="row w-100 m-1">
                    <div class="col-md-5">
                        ID
                    </div>
                    <div class="col-md-5">
                        <DoubleUnitInput class="form-control"
                        @bind-Value="ConfigDetails.CasingLiner.OpenHoleId"
                                         unitCat="@Enums.UnitCategory.Diameter" units="@ConfigDetails.Units" />

                    </div>
                </div>
            </div>
            <!---->
        </div>
    </div>
</EditForm>
@code {
    public ConfigDetails ConfigDetails { set; get; } = new();
    public string ConfigId { set; get; }
    protected override async void OnInitialized()
    {
        Statics.PageTitle = "BOP Control System";

        ConfigId = UriExtenssions.GetQueryStringValue(NavigationManager.Uri, "Id");
        ConfigDetails = await _configApi.GetConfigDetails(ConfigId);
        StateHasChanged();

        base.OnInitialized();
    }
    public async Task SaveAndContinue()
    {
        await _configApi.SaveConfigDetails(ConfigId, ConfigDetails);
        NavigationManager.NavigateTo($"/SaveConfig_4?Id={ConfigId}");
    }
}
